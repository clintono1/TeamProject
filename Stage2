	public String getTile(int index) // return address of given tile index
	{
		String ret = "";
		switch (index)

		{
		case 1:
			ret = "/images/tile1.jpg";
			break;
		case 2:
			ret = "/images/tile2.jpg";
			break;
		case 3:
			ret = "/images/tile3.jpg";
			break;
		case 4:
			ret = "/images/tile4.jpg";
			break;
		case 5:
			ret = "/images/tile5.jpg";
			break;
		case 6:
			ret = "/images/tile6.jpg";
			break;
		case 7:
			ret = "/images/tile7.jpg";
			break;
		case 8:
			ret = "/images/tile8.jpg";
			break;
		case 9:
			ret = "/images/tile9.jpg";
			break;
		case 10:
			ret = "/images/tile10.jpg";
			break;
		case 11:
			ret = "/images/tile11.jpg";
			break;
		case 12:
			ret = "/images/tile12.jpg";
			break;
		case 13:
			ret = "/images/tile13.jpg";
			break;
		case 14:
			ret = "/images/tile14.jpg";
			break;
		case 15:
			ret = "/images/tile15.jpg";
			break;
		case 16:
			ret = "/images/tile16.jpg";
			break;
		case 17:
			ret = "/images/tile17.jpg";
			break;
		case 18:
			ret = "/images/tile18.jpg";
			break;
		case 19:
			ret = "/images/tile19.jpg";
			break;
		case 20:
			ret = "/images/tile20.jpg";
			break;
		case 21:
			ret = "/images/tile21.jpg";
			break;
		case 22:
			ret = "/images/tile22.jpg";
			break;
		case 23:
			ret = "/images/tile23.jpg";
			break;
		case 24:
			ret = "/images/tile24.jpg";
			break;
		}
		return ret;
	} // end of getTile()
	public Board()
	{
		JFrame _jf = new JFrame("Carcassone"); // window frame
		JFrame _jf2 = new JFrame(""); // window2 frame
		JPanel _jp = new JPanel();
		JPanel _jp2 = new JPanel(); // Jpanel for window 2
		_jp2.add(_jb2); // add jb2 button to jp2 jPanel 2
		Dimension d2 = new Dimension(); // dimension on window 2
		d2.setSize(250, 250); // 900, 800
		Dimension d = new Dimension(); // dimension for window 1
		d.setSize(770, 800); // 900, 800
		_jf2.setSize(d2); // set size of jframe
		_jf.setSize(d); // window size
		// JButton [] jb = new JButton[72];
		for (int z = 0; z < 72; z++)
		{
			jb.add(new JButton());
		}
		// 8 Rows * 9 Columns = 72 buttons
		for (int i = 0; i < 72; i = i + 1)
			_jp.add(jb.get(i));
		{
		}
		// end of for loop
		// jb.get(10).setIcon(new ImageIcon(img));
		/*
		 * for(int i=0; i< 72; i = i+1)
		 * 
		 * {
		 * 
		 * try
		 * 
		 * {
		 * 
		 * Image img =
		 * 
		 * ImageIO.read(getClass().getResource("/images/tile1.jpg"));
		 * 
		 * jb.get(i).setIcon(new ImageIcon(img));
		 * 
		 * //jb.setIcon(new ImageIcon(img));
		 * 
		 * }
		 * 
		 * catch (IOException ex) {}
		 * 
		 * _jp.add(jb.get(i));
		 * 
		 * 
		 * 
		 * System.out.println("Added" + i);
		 * 
		 * 
		 * 
		 * } //end of for loop
		 */
		_jp.setLayout(new GridLayout(9, 8)); // 9 rows and 8 columns -> panel
		// layout
		_jp2.setLayout(new GridLayout(2, 1)); // layout of panel 2 in window 2
		/*
		 * 
		 * //add tile to viewer
		 * 
		 * try
		 * 
		 * {
		 * 
		 * //randomly select tile
		 * 
		 * Image img_exit =
		 * ImageIO.read(getClass().getResource("/images/tile21.jpg")); //view
		 * tile
		 * 
		 * 
		 * 
		 * _ImageAddress = "/images/tile21.jpg";
		 * 
		 * System.out.println(_ImageAddress);
		 * 
		 * 
		 * 
		 * exit_bt.setIcon(new ImageIcon(img_exit));
		 * 
		 * }
		 * 
		 * catch (IOException ex) {
		 * 
		 * }
		 */
		_jp2.add(exit_bt);
		// end of tile to viewer
		_jf.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		_jf.add(_jp); // add panel to frame
		_jf.setLocationRelativeTo(null);
		_jf.setVisible(true); // set window visible
		// window 2
		_jf2.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		_jf2.add(_jp2); // add panel to frame
		_jf2.setVisible(true); // set window visible
	} // end of constructor Board()
	public void setTile(int idx, int tile_no)
	{
		Image img;
		try
		{
			img = ImageIO.read(getClass().getResource(""));
			switch (tile_no)
			{
			case 1:
				img = ImageIO.read(getClass().getResource("/images/tile1.jpg"));
				break;
			}
			jb.get(idx + 1).setIcon(new ImageIcon(img));
		}
		catch (IOException ex) {
		}
	} // end of setTile()
