	// draw button
	public void callDrawAction() // change tile to the drawn tile
	{
		// _jb2 is the "Draw Tile" button
		_jb2.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				_ImageAddress = ""; // reset _ImageAddress variable
				exit_bt.setIcon(new ImageIcon(""));
				// random draw index generator
				Random generator = new Random();
				// int j = generator.nextInt(45); //randomly pick any of 45
				// Blocks
				int j2 = generator.nextInt((24 - 1) + 1) + 1; // randomly pick
																// any of 24
																// Tiles0
				// System.out.println("Block Number: " + j);
				System.out.println("Tile Number: " + j2);
				_ImageAddress = getTile(j2); // obtains the root of Tile index
												// j2
				if (true) // check if something present in _ImageAddress
				{
					try
					{
						// randomly select tile
						Image img_of_drawn_tile = ImageIO.read(getClass()
								.getResource(_ImageAddress)); // _ImageAddress
																// stores the
																// root of
																// current
																// random image
						exit_bt.setIcon(new ImageIcon(img_of_drawn_tile));
					}
					catch (IOException ex) {
					}
				}
			}
		});
	}// end of draw button action
	public void callSelectBlock(int block_no)
	{
		final int blk = block_no;
		try
		{
			// randomly select tile
			Image img_last = ImageIO
					.read(getClass().getResource(_ImageAddress));
			System.out.println(">>In action method");
			jb.get(blk).setIcon(new ImageIcon(img_last));
			// callSelectBlockIndex();
			System.out.println(blk);
			FillCheck.add(blk);
		}
		catch (IOException ex) {
		}
	}// end of callSelectBlock(int block_no)
	// returns if placing tile in a particular block is allowed
	public boolean callAllowPlaceBlock(int xp, int yp)
	{
		boolean allow = false;
		int x1, x2, x3, x4, x5, x6, x7, x8;
		int y1, y2, y3, y4, y5, y6, y7, y8;
		if (xp == 0 && yp == 0) // check for top left corner
		{
			x1 = xp + 1; // right
			y1 = yp;
			if (FillCheck.contains(callBlockCoordinate(x1, y1)) == true)
				return true;
			x2 = xp; // bottom
			y2 = yp + 1;
			if (FillCheck.contains(callBlockCoordinate(x2, y2)) == true)
				return true;
		/*	x3 = xp + 1; // corner
			y3 = yp + 1;
			if (FillCheck.contains(callBlockCoordinate(x3, y3)) == true)
				return true;
		*/}
		else if (xp == 7 && yp == 0) // check for top right corner
		{
			x1 = xp - 1; // left
			y1 = yp;
			if (FillCheck.contains(callBlockCoordinate(x1, y1)) == true)
				return true;
			x2 = xp; // bottom
			y2 = yp + 1;
			if (FillCheck.contains(callBlockCoordinate(x2, y2)) == true)
				return true;
		/*	x3 = xp - 1; // corner
			y3 = yp + 1;
			if (FillCheck.contains(callBlockCoordinate(x3, y3)) == true)
				return true;
		*/}
		else if (xp == 0 && yp == 8) // check for bottom left corner
		{
			x1 = xp + 1; // right
			y1 = yp;
			if (FillCheck.contains(callBlockCoordinate(x1, y1)) == true)
				return true;
			x2 = xp; // top
			y2 = yp - 1;
			if (FillCheck.contains(callBlockCoordinate(x2, y2)) == true)
				return true;
		/*	x3 = xp + 1; // corner
			y3 = yp - 1;
			if (FillCheck.contains(callBlockCoordinate(x3, y3)) == true)
				return true;
		*/}
		else if (xp == 7 && yp == 8) // check for bottom right corner
		{
			x1 = xp - 1; // left
			y1 = yp;
			if (FillCheck.contains(callBlockCoordinate(x1, y1)) == true)
				return true;
			x2 = xp; // top
			y2 = yp - 1;
			if (FillCheck.contains(callBlockCoordinate(x2, y2)) == true)
				return true;
		/*	x3 = xp - 1; // corner
			y3 = yp - 1;
			if (FillCheck.contains(callBlockCoordinate(x3, y3)) == true)
				return true;
		*/}
		else if (xp == 0 && yp > 0 && yp < 9) // left column
		{
			x1 = xp + 1; // right
			y1 = yp;
			if (FillCheck.contains(callBlockCoordinate(x1, y1)) == true)
				return true;
			x2 = xp; // top 
			y2 = yp - 1;
			if (FillCheck.contains(callBlockCoordinate(x2, y2)) == true)
				return true;
		/*	x3 = xp + 1; // bottom corner
			y3 = yp + 1;
			if (FillCheck.contains(callBlockCoordinate(x3, y3)) == true)
				return true;
		*/	x4 = xp;
		y4 = yp + 1; // bottom
		if (FillCheck.contains(callBlockCoordinate(x4, y4)) == true)
			return true;
		}
		else if (xp == 7 && yp > 0 && yp < 9) // right column
		{
			x1 = xp - 1; // left
			y1 = yp;
			if (FillCheck.contains(callBlockCoordinate(x1, y1)) == true)
				return true;
			x2 = xp; // bottom
			y2 = yp + 1;
			if (FillCheck.contains(callBlockCoordinate(x2, y2)) == true)
				return true;
			x3 = xp; // top
			y3 = yp - 1;
			if (FillCheck.contains(callBlockCoordinate(x3, y3)) == true)
				return true;
		/*	x4 = xp - 1; // top left corner
			y4 = yp - 1;
			if (FillCheck.contains(callBlockCoordinate(x4, y4)) == true)
				return true;
			x5 = xp - 1; // top left corner
			y5 = yp + 1;
			if (FillCheck.contains(callBlockCoordinate(x5, y5)) == true)
				return true;
		*/}
		// possible error
		else if (xp > 0 && xp < 8 && yp == 0) // top row
		{
			x1 = xp + 1; // right
			y1 = yp;
			if (FillCheck.contains(callBlockCoordinate(x1, y1)) == true)
				return true;
			x2 = xp - 1; // left
			y2 = yp;
			if (FillCheck.contains(callBlockCoordinate(x2, y2)) == true)
				return true;
			x3 = xp; // bottom
			y3 = yp + 1;
			if (FillCheck.contains(callBlockCoordinate(x3, y3)) == true)
				return true;
	/*		x4 = xp + 1; // bottom right corner
			y4 = yp + 1;
			if (FillCheck.contains(callBlockCoordinate(x4, y4)) == true)
				return true;
			x5 = xp - 1; // bottom right corner
			y5 = yp + 1;
			if (FillCheck.contains(callBlockCoordinate(x5, y5)) == true)
				return true;
		*/}
		else if (xp > 0 && xp < 8 && yp == 8) // bottom row
		{
			x1 = xp + 1; // right
			y1 = yp;
			if (FillCheck.contains(callBlockCoordinate(x1, y1)) == true)
				return true;
			x2 = xp - 1; // left
			y2 = yp;
			if (FillCheck.contains(callBlockCoordinate(x2, y2)) == true)
				return true;
			x3 = xp; // top
			y3 = yp - 1;
			if (FillCheck.contains(callBlockCoordinate(x3, y3)) == true)
				return true;
		}
		else if (xp > 0 && yp > 0)
		{
			x1 = xp + 1; // right
			y1 = yp;
			if (FillCheck.contains(callBlockCoordinate(x1, y1)) == true)
				return true;
			x2 = xp - 1; // left
			y2 = yp;
			if (FillCheck.contains(callBlockCoordinate(x2, y2)) == true)
				return true;
			x3 = xp;
			y3 = yp - 1; // top
			if (FillCheck.contains(callBlockCoordinate(x3, y3)) == true)
				return true;
			x4 = xp;
			y4 = yp + 1; // bottom
			if (FillCheck.contains(callBlockCoordinate(x4, y4)) == true)
				return true;
			/*x5 = xp + 1; // top right corner
			y5 = yp - 1;
			if (FillCheck.contains(callBlockCoordinate(x5, y5)) == true)
				return true;
			x6 = xp - 1; // top left corner
			y6 = yp - 1;
			if (FillCheck.contains(callBlockCoordinate(x6, y6)) == true)
				return true;
			x7 = xp + 1; // bottom right corner
			y7 = yp + 1;
			if (FillCheck.contains(callBlockCoordinate(x7, y7)) == true)
				return true;
			x8 = xp - 1; // bottom left corner
			y8 = yp + 1;
			if (FillCheck.contains(callBlockCoordinate(x8, y8)) == true)
				return true;
		*/}
		return allow;
	}// end of callAllowPlaceBlock
