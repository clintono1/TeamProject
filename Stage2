	// returns block index when given the coordinates
	public int callBlockCoordinate(int x, int y)
	{
		int block_index = 0;
		for (int i = 0; i < y; i++)
		{
			block_index = 8 * (i + 1);
		}
		block_index = block_index + x;
		return (block_index);
	} // end of callBlockCoordinates
} // end of class


